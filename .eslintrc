{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "plugins": ["react"],

  /**
   *  "off" or 0 - turn the rule off
   *  "warn" or 1 - turn the rule on as a warning
   *  "error" or 2 - turn the rule on as an error
   */
  "rules": {
    /**
    `*  Possible Errors
     */
    "comma-dangle": 2,
    "no-cond-assign": 2,
    "no-console": 1,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 1,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 0,
    "no-extra-semi": 1,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-prototype-builtins": 0,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unexpected-multiline": 2,
    "no-unreachable": 2,
    "no-unsafe-finally": 2,
    "use-isnan": 2,
    "valid-jsdoc": 2,
    "valid-typeof": 2,

    /**
    `*  Best Practices
     */
    "accessor-pairs": 1,
    "array-callback-return": 2,
    "block-scoped-var": 2,
    "complexity": 0,
    "consistent-return": 2,
    "curly": 1,
    "default-case": 2,
    "dot-location": 0,
    "dot-notation": 1,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 1,
    "no-caller": 2,
    "no-case-declarations": 2,
    "no-div-regex": 1,
    "no-else-return": 2,
    "no-empty-function": 2,
    "no-empty-pattern": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-extra-bind": 2,
    "no-extra-label": 0,
    "no-fallthrough": 2,
    "no-floating-decimal": 0,
    "no-implicit-coercion": 2,
    "no-implicit-globals": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-iterator": 0,
    "no-labels": 0,
    "no-lone-blocks": 0,
    "no-loop-func": 1,
    "no-magic-numbers": 0,
    "no-multi-spaces": 0,
    "no-multi-str": 0,
    "no-native-reassign": 2,
    "no-new": 1,
    "no-new-func": 1,
    "no-new-wrappers": 0,
    "no-octal": 0,
    "no-octal-escape": 0,
    "no-param-reassign": 2,
    "no-proto": 1,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-assign": 0,
    "no-self-compare": 0,
    "no-sequences": 0,
    "no-throw-literal": 2,
    "no-unmodified-loop-condition": 2,
    "no-unused-expressions": 2,
    "no-unused-labels": 0,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-useless-escape": 1,
    "no-void": 0,
    "no-warning-comments": 0,
    "no-with": 2,
    "radix": 1,
    "vars-on-top": 0,
    "wrap-iife": [2, "any"],
    "yoda": 1,

    /**
     *  Variables
     */
    "init-declarations": 2,
    "no-catch-shadow": 2,
    "no-delete-var": 0,
    "no-label-var": 0,
    "no-restricted-globals": 0,
    "no-shadow": 1,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-undef-init": 1,
    "no-undefined": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 1,

    /**
     *  ECMAScript 6
     */
    "arrow-body-style": 2,
    "arrow-parens": 1,
    "arrow-spacing": 1,
    "constructor-super": 2,
    "generator-star-spacing": 1,
    "no-class-assign": 2,
    "no-confusing-arrow": 0,
    "no-const-assign": 2,
    "no-dupe-class-members": 2,
    "no-duplicate-imports": 2,
    "no-new-symbol": 2,
    "no-restricted-imports": 0,
    "no-this-before-super": 2,
    "no-useless-computed-key": 1,
    "no-useless-constructor": 2,
    "no-useless-rename": 2,
    "no-var": 2,
    "object-shorthand": 1,
    "prefer-arrow-callback": 1,
    "prefer-const": 1,
    "prefer-reflect": 1,
    "prefer-rest-params": 2,
    "prefer-spread": 1,
    "prefer-template": 1,
    "require-yield": 2,
    "rest-spread-spacing": 1,
    "sort-imports": 0,
    "template-curly-spacing": 1,
    "yield-star-spacing": 1,

    /**
     *  JSX-specific rules
     */
    "react/display-name": 0,
    "react/forbid-prop-types": 0,
    "react/no-comment-textnodes": 1,
    "react/no-danger": 2,
    "react/no-deprecated": 2,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/no-direct-mutation-state": 2,
    "react/no-is-mounted": 2,
    "react/no-multi-comp": 2,
    "react/no-render-return-value": 2,
    "react/no-set-state": 0,
    "react/no-string-refs": 1,
    "react/no-unknown-property": 2,
    "react/prefer-es6-class": 2,
    "react/prefer-stateless-function": 2,
    "react/prop-types": 2,
    "react/react-in-jsx-scope": 2,
    "react/require-extension": 0,
    "react/require-optimization": 0,
    "react/require-render-return": 2,
    "react/self-closing-comp": 1,
    "react/sort-comp": 0,
    "react/sort-prop-types": 0,
    "react/wrap-multilines": 2,

    /**
     *  JSX-specific rules
     */
    "react/jsx-boolean-value": 1,
    "react/jsx-closing-bracket-location": [1, "after-props"],
    "react/jsx-curly-spacing": 1,
    "react/jsx-equals-spacing": 1,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-first-prop-new-line": [1, "never"],
    "react/jsx-handler-names": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-key": 2,
    "react/jsx-max-props-per-line": [1, { "maximum": 5 }],
    "react/jsx-no-bind": 1,
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-no-literals": 0,
    "react/jsx-no-target-blank": 0,
    "react/jsx-no-undef": 2,
    "react/jsx-pascal-case": 1,
    "react/jsx-sort-props": 0,
    "react/jsx-space-before-closing": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 2
  }
}