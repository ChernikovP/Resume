{
  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },

  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },

  "plugins": ["react"],

  "extends": ["eslint:recommended", "plugin:react/recommended"],

  /**
   *  "off" or 0 - turn the rule off
   *  "warn" or 1 - turn the rule on as a warning
   *  "error" or 2 - turn the rule on as an error
   */
  "rules": {
    /**
    `*  Possible Errors
     */
    "no-console": 1,
    "no-debugger": 1,

    /**
    `*  Best Practices
     */
    "array-callback-return": 2,
    "curly": 1,
    "default-case": 2,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 1,
    "no-else-return": 2,
    "no-implicit-coercion": 2,
    "no-loop-func": 1,
    "no-param-reassign": 2,
    "no-useless-escape": 1,
    "radix": 1,
    "yoda": 1,

    /**
     *  Variables
     */
    "no-undef-init": 1,
    "no-undefined": 2,

    /**
     *  Stylistic Issues
     */
    "indent": 1,
    "jsx-quotes": 1,
    "max-depth": [1, 4],
    "max-len": [1, 120],
    "max-params": [1, 4],
    "newline-before-return": 1,
    "operator-assignment": 1,
    "quotes": [1, "single", {"avoidEscape": true, "allowTemplateLiterals": true}],

    /**
     *  ECMAScript 6
     */
    "arrow-parens": 1,
    "no-useless-computed-key": 1,
    "no-useless-constructor": 2,
    "no-var": 2,
    "object-shorthand": 1,
    "prefer-const": 2,
    "prefer-rest-params": 2,
    "prefer-spread": 1,
    "prefer-template": 1,
    "template-curly-spacing": 1,

    /**
     *  JSX-specific rules
     */
    "react/display-name": 0,
    "react/no-comment-textnodes": 1,
    "react/no-string-refs": 1,
    "react/prefer-stateless-function": 2,
    "react/self-closing-comp": 1,
    "react/wrap-multilines": 2,

    /**
     *  JSX-specific rules
     */
    "react/jsx-boolean-value": 1,
    "react/jsx-key": 2,
    "react/jsx-no-bind": [1, { "ignoreRefs": true }]
  }
}